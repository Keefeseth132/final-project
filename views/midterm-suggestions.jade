extends layout
block content
	header.header-container
		img.logo(src='images/logo.png')
		.page-name Encyclopedia Budtanica
		.navbar-float
			nav
				ul
					a(href='midterm.html')
						li.navbar-button Home
					a(href='about')
						li.navbar-button About
					a(href='suggestions')
						li.navbar-button.active-nav Suggestions
					a(href='new-cannabis')
						li.navbar-button I'm new to cannabis
	.container.text-color
		.row
			.col-md-12
				h3#suggestion-bar-title.text-color We're still growing!
				#custom-suggestion-input
					.input-group
						input#input-box.form-control.input-lg(type='text', placeholder='how can we improve this site?')
						span.input-group-btn
							button.btn.btn-info.btn-lg(type='button')
								span#send-button.glyphicon.glyphicon-send
