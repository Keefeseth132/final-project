extends layout
block content

	.container(ng-controller='homeSearch')
		#custom-search-input
			.input-group
				input#searchInput.form-control.input-lg(ng-model="search" ng-keyup="keyUpSearch()" type='text' placeholder='stress, pain, depression, insomnia, lack of appetite, seizures, muscle spasms, nausea')
				span.input-group-btn
					button.btn.btn-info.btn-lg(type='button')
						span.glyphicon.glyphicon-search

		.col-xs-12.col-sm-6.col-md-3(ng-repeat="strain in strains | filter:search")
			.portfolio-item
				.front.picture-title
					h4 {{strain.name}}
					img(ng-src='{{strain.image}}')
				.back
					ul
						li Type: {{strain.type}}
						li THC: {{strain.THC}}
						li CBD: {{strain.CBD}}
						li CBN: {{strain.CBN}}
						li Effects: {{strain.effects}}
						li Ailments: {{strain.ailments.join(', ')}}
					
					.favorite-icon.pull-right.glyphicon.glyphicon-star.gold(ng-click="unfavorite(strain)" ng-show="strain.favorite")

					.favorite-icon.pull-right.glyphicon.glyphicon-star(ng-click="favorite(strain)" ng-show="!strain.favorite")